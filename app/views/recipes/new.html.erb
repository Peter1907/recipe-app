<div class="new-recipe flex flex-col items-center mx-auto mt-8">
  <h1 class = "text-3xl font-bold mb-4">Recipe App</h1>
  <h2 class = "text-2xl mb-4">Add a New recipe</h2>
  <%= form_with model: @recipe, url: recipes_path, method: :post do |form| %>
    <div class = "mb-4">
      <%= form.text_field :name, placeholder: 'Recipe Name', class: "rounded" %>
    </div>
    <div class = "mb-4">
      <%= form.text_area :description, placeholder: 'Description', class: "rounded" %>
    </div>
    <div class = "mb-4">
      <%= form.text_field :preparation_time, placeholder: 'Preparation Time (minutes)', class: "rounded" %>
    </div>
    <div class = "mb-4">
      <%= form.text_field :cooking_time, placeholder: 'Cooking Time (minutes)', class: "rounded" %>
    </div>
    <div class = "mb-4">
      <%= form.check_box :public %>
      <%= form.label :public, "Public" %>
    </div>
    <div class = "mt-6">
      <%= form.submit :'Create Recipe', class: 'cursor-pointer font-semibold rounded px-4 py-2 bg-cyan-300 hover:bg-cyan-700 hover:text-white' %>
    </div>
    <div class = "mt-6">
      <%= link_to "Cancel", :back, class: 'cursor-pointer font-semibold rounded px-4 py-2 bg-cyan-300 hover:bg-cyan-700 hover:text-white' %>  
    </div>
  <% end %>
</div>
