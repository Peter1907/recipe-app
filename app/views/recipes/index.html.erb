<div class="recipes flex flex-col w-full min-h-screen bg-slate-200 items-center gap-10 p-[5%]">
  <% @recipes.each do |recipe| %>
    <div class="recipe flex felx-col w-[90%] border border-black p-8 items-center">
      <div class="recipe-info flex">
        <h2 class="mr-10 hover:text-red-400 hover:underline">
          <%= link_to recipe.name, recipe_path(recipe) %>
        </h2>
        <p><%= recipe.description %></p>
      </div>
    </div>
  <% end %>
</div>