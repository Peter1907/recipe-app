<div class="recipes bg-gradient-to-b from-blue/75 to-blueD bg-fixed flex flex-col w-full min-h-screen bg-slate-200 items-center gap-4 p-[2%]">
  <h1 class="text-3xl font-semibold font-pacifico italic mt-4 text-yellowL sm:text-6xl sm:mb-8">Recipes</h1>
  <%= link_to 'New Recipe', new_recipe_path, class: "self-end px-4 py-2 text-yellow font-bold text-lg
    hover:shadow-lg hover:bg-black hover:bg-black/30 ease-in-out duration-300
    rounded-md sm:mr-80" %>
  <% @recipes.each do |recipe| %>
    <div class="recipe flex flex-row justify-between w-[90%] text-gray-700
      bg-gradient-to-b from-blueM to-blueL p-8 rounded-md hover:scale-105 ease-in-out duration-500
      hover:shadow-2xl hover:cursor-pointer hover:text-gray-900 sm:w-[64%] sm:text-xl"
    >
      <div class="recipe-info flex self-start items-center gap-10">
        <%= link_to recipe_path(recipe) do %>
          <h2 class = "py-2 px-4 self-start hover:text-yellow hover:shadow-lg
              hover:bg-black hover:bg-black/30 ease-in-out duration-300
              rounded-md text-xl font-semibold sm:text-2xl"><%= recipe.name %>:
          <p class="mt-1 font-normal"><%= recipe.description %></p>
          </h2>
        <% end %>
      </div>
      <%= button_to 'Delete', recipe_path(recipe), method: :delete, class: "px-4 py-2 hover:text-yellow hover:font-bold text-lg
        hover:shadow-lg hover:bg-black hover:bg-black/30 ease-in-out duration-300 rounded-md" %>
    </div>
  <% end %>
</div>