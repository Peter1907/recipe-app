<div class="recipe-details bg-gradient-to-b from-blue/75 to-blueD bg-fixed flex flex-col w-full min-h-screen bg-slate-200 items-center gap-4 p-[2%]">
  <h1 class="text-3xl font-semibold font-pacifico italic mt-4 text-yellowL sm:text-6xl sm:mb-8">
    <%= @recipe.name %> Shopping List
  </h1>
  <div class="shopping-list-info flex flex-col justify-between w-[90%] text-white mt-6 sm:flex-row sm:text-2xl sm:w-[64%] sm:mt-14">
    <p><strong>Amount of food items to buy:</strong> <%= @recipe.recipes_foods.length %></p>
    <p class="mt-4 sm:mt-0"><strong>Total value of food needed:</strong> $<%= @total %></p>
  </div>
  <hr class="border border-white m-10 w-[80%] sm:w-[55%]">
  <table class="table-auto border-spacing-2 text-white sm:text-xl">
    <thead class="border border-black bg-black/40">
      <tr class="border border-black">
        <th class="border border-black px-4 font-semibold sm:p-4">Food</th>
        <th class="border border-black px-4 font-semibold sm:p-4">Quantity</th>
        <th class="border border-black px-4 font-semibold sm:p-4">Price</th>
      </tr>
    </thead class = "border border-black">
    <tbody class = "border border-black bg-black/10">
      <% @recipes_foods.each do |item| %>
        <tr class = "border border-black">
          <% food = Food.find(item.food_id) %>
          <td class = "border border-black px-6 py-1 sm:py-4 sm:px-8"><%= food.name %></td>
          <td class = "border border-black px-6 py-1 sm:py-4 sm:px-8"><%= item.quantity %> <%= food.measurement_unit %></td>
          <td class = "border border-black px-6 py-1 sm:py-4 sm:px-8">$<%= food.price * item.quantity %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Back", recipe_path(@recipe),
    class: "px-4 py-2 text-white hover:text-yellow hover:font-semibold sm:text-xl
    hover:shadow-lg hover:bg-black hover:bg-black/30 ease-in-out duration-300
    rounded-md" %>
</div>