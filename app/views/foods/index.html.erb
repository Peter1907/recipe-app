<div class="recipes flex flex-col w-full min-h-screen bg-slate-200 items-center gap-4 p-[2%]">
  <div class = "flex flex-row items-center justify-between w-[50%] mb-8">
    <h1 class="text-3xl font-semibold sm:text-6xl">Recipe App</h1>
    <div>
      <%= link_to new_food_path do %>
        <button class = "rounded-full border-2 pl-2 pr-2 pt-2 pb-2 bg-slate-500 text-white" >Add Food</button>
      <% end %>
    </div>
  </div>

  <table class = "table-auto border-spacing-2 sm:text-xl">
    <thead class = "border border-black">
      <tr class = "border border-black">
        <th class = "border border-black px-4 font-semibold sm:p-4">Food</th>
        <th class = "border border-black px-4 font-semibold sm:p-4">Measurement Unit</th>
        <th class = "border border-black px-4 font-semibold sm:p-4">Unit Price</th>
        <th class = "border border-black px-4 font-semibold sm:p-4">Quantity</th>
        <th class = "border border-black px-4 font-semibold sm:p-4">Actions</th>
      </tr>
    </thead>
    <tbody class = "border border-black">
      <% @foods.each do |food| %>
        <tr class = "border border-black">
          <td class = "border border-black px-4"><%= food.name %></td>
          <td class = "border border-black px-4"><%= food.measurement_unit %></td>
          <td class = "border border-black px-4">$<%= food.price %></td>
          <td class = "border border-black px-4"><%= food.quantity %></td>
          <%= form_with url: food_path(food), method: :delete, scope: :food do |form| %>      
            <td class = "border border-black px-4 bg-blue-500">
              <%= form.submit :'Remove', class: 'text-yellow-400 font-medium cursor-pointer' %>
            </td> 
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
