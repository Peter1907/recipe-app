<div class="login flex flex-col items-center w-full pt-10">
  <h2 class = "font-semibold text-3xl mb-10 sm:text-6xl">Recipe App</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex mb-6 sm:h-14">
      <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "rounded sm:w-96" %>
    </div>
  
    <div class="flex mb-6 sm:h-14">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "rounded sm:w-96" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="font-sans mb-4 text-right">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="actions mb-4">
      <%= f.submit "Log in", class: 'cursor-pointer font-semibold rounded px-4 py-2 bg-cyan-300 hover:bg-cyan-700 hover:text-white sm:text-xl sm:px-8 sm:py-4' %>
    </div>
  <% end %>
  <div class="links ml-8 mt-8 felx flex-col items-start sm:w-96 sm:ml-4 sm:text-xl">
    <%= render "devise/shared/links" %>
  </div>
</div>